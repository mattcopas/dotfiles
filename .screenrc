autodetach on
startup_message off
hardstatus alwayslastline
# Change prefix to Ctrl-Space 
escape ^@a
# save layout when detaching
bind d eval "layout save default" "detach"
bind | eval "split -v" "focus" "screen"
bind - eval "split" "focus" "screen"
bind k remove

